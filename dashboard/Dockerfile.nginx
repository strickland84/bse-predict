# Build stage
FROM node:18-alpine as builder
WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci
COPY frontend/ ./
# Build with empty base URL - frontend will use relative paths through nginx
ENV VITE_API_URL=""
ENV VITE_WS_URL=""
RUN npm run build

# Nginx stage
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
# Copy config based on build arg
ARG ENV=dev
COPY nginx.${ENV}.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]